{
  "compilerOptions": {
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "jsxFactory": "h",
    "lib": [
      "dom",
      "es2017",
      "esnext.array"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "target": "es2017",
    "baseUrl": ".",
    "paths": {
      "@rindo/core/cli": [
        "../cli/index.ts"
      ],
      "@rindo/core/compiler": [
        "../compiler/index.ts"
      ],
      "@rindo/core/declarations": [
        "../declarations/index.ts"
      ],
      "@rindo/core/mock-doc": [
        "../mock-doc/index.ts"
      ],
      "@rindo/core/testing": [
        "../testing/index.ts"
      ],
      "@rindo/core": [
        "../index.ts"
      ],
      "@utils": [
        "../utils/index.ts"
      ]
    }
  }
}
