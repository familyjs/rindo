{
  "compilerOptions": {
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": true,
    "declaration": false,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "jsxFactory": "h",
    "lib": [
      "dom",
      "es2017"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "pretty": true,
    "target": "es5",
    "useUnknownInCatchVariables": true,
    "outDir": "tmp-compiled-tests",
    "baseUrl": ".",
    "paths": {
      "@rindo/core": ["../../internal"],
      "@rindo/core/internal": ["../../internal"],
      "@rindo/core/internal/client": ["../../internal/client"],
      "@rindo/core/testing": ["../../testing"]
    }
  },
  "include": [
    "test-app/components.d.ts",
    "test-app/**/*.spec.ts",
    "test-app/**/*.tsx",
    "test-app/**/*.ts",
    "test-app/util.ts",
    "test-app/global.ts"
  ],
  "exclude": [
    "test-prerender",
    "test-sibling"
  ]
}
