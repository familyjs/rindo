{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": false,
    "experimentalDecorators": true,
    "lib": ["dom", "es2017"],
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2017",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react",
    "jsxFactory": "h",
    "useUnknownInCatchVariables": true,
    "baseUrl": ".",
    "paths": {
      "@rindo/core": ["../../internal"],
      "@rindo/core/internal": ["../../internal"],
      "@rindo/core/testing": ["../../testing"],
      "@rindo/core/mock-doc": [
        "../../mock-doc"
      ]
    }
  },
  "include": ["src"]
}
