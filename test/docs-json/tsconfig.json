{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": false,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2017"
    ],
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2017",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react",
    "jsxFactory": "h",
    "paths": {
      "@rindo/core/testing": [
        "../../src/testing/index.ts"
      ],
      "@rindo/core": [
        "../../internal"
      ],
      "@rindo/core/compiler": [
        "../../compiler"
      ],
      "@rindo/core/internal": [
        "../../internal"
      ]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]

}
